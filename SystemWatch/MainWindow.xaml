<Window x:Class="SystemWatch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="SystemWatch" Width="900" Height="700"
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 0: Controls -->
            <RowDefinition Height="Auto"/>
            <!-- 1: CPU Text -->
            <RowDefinition Height="Auto"/>
            <!-- 2: RAM Text -->
            <RowDefinition Height="Auto"/>
            <!-- 3: Net Text -->
            <RowDefinition Height="Auto"/>
            <!-- 4: Disk Text -->
            <RowDefinition Height="*"/>
            <!-- 5: CPU Chart -->
            <RowDefinition Height="*"/>
            <!-- 6: RAM Chart -->
            <RowDefinition Height="*"/>
            <!-- 7: Net Chart -->
            <RowDefinition Height="*"/>
            <!-- 8: Disk Chart -->
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                <TextBlock Text="Update-Rate: " VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="UpdateRateCombo" Width="120" SelectionChanged="UpdateRateCombo_SelectionChanged">
                    <ComboBoxItem Tag="500">0,5 s</ComboBoxItem>
                    <ComboBoxItem Tag="1000" IsSelected="True">1 s</ComboBoxItem>
                    <ComboBoxItem Tag="2000">2 s</ComboBoxItem>
                    <ComboBoxItem Tag="4000">4 s</ComboBoxItem>
                </ComboBox>
                <TextBlock Text="  Verlauf: " VerticalAlignment="Center" Margin="12,0,8,0"/>
                <ComboBox x:Name="HistoryCombo" Width="120" SelectionChanged="HistoryCombo_SelectionChanged">
                    <ComboBoxItem Tag="30">kurz</ComboBoxItem>
                    <ComboBoxItem Tag="60" IsSelected="True">mittel</ComboBoxItem>
                    <ComboBoxItem Tag="120">lang</ComboBoxItem>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Theme: " VerticalAlignment="Center" Margin="0,0,8,0"/>
                <ComboBox x:Name="ThemeCombo" Width="120" SelectionChanged="ThemeCombo_SelectionChanged">
                    <ComboBoxItem Tag="Light" IsSelected="True">Hell</ComboBoxItem>
                    <ComboBoxItem Tag="Dark">Dunkel</ComboBoxItem>
                </ComboBox>
                <CheckBox x:Name="AutostartCheck" Content="Autostart" Margin="16,0,0,0"
                          Checked="AutostartCheck_Changed"
                          Unchecked="AutostartCheck_Changed"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="CPU: " FontSize="18" Margin="0,0,8,0"/>
            <TextBlock x:Name="CpuText" FontSize="18" FontWeight="Bold"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="RAM: " FontSize="18" Margin="0,0,8,0"/>
            <TextBlock x:Name="RamText" FontSize="18" FontWeight="Bold"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Netz: " FontSize="18" Margin="0,0,8,0"/>
            <TextBlock x:Name="NetText" FontSize="18" FontWeight="Bold" Margin="0,0,16,0"/>
            <TextBlock Text="Adapter: " VerticalAlignment="Center" Margin="0,0,4,0"/>
            <ComboBox x:Name="AdapterCombo" Width="260" SelectionChanged="AdapterCombo_SelectionChanged"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Disk: " FontSize="18" Margin="0,0,8,0"/>
            <TextBlock x:Name="DiskText" FontSize="18" FontWeight="Bold" Margin="0,0,16,0"/>
            <TextBlock Text="Laufwerk: " VerticalAlignment="Center" Margin="0,0,4,0"/>
            <ComboBox x:Name="DriveCombo" Width="80" SelectionChanged="DriveCombo_SelectionChanged"/>
        </StackPanel>

        <!-- CPU Chart Row -->
        <Grid Grid.Row="5" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="CPU Verlauf:" VerticalAlignment="Top" Margin="0,0,12,0" />
            <lvc:CartesianChart x:Name="CpuChart" Grid.Column="1" />
        </Grid>

        <!-- RAM Chart Row -->
        <Grid Grid.Row="6" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="RAM Verlauf:" VerticalAlignment="Top" Margin="0,0,12,0" />
            <lvc:CartesianChart x:Name="RamChart" Grid.Column="1" />
        </Grid>

        <!-- Network Chart Row -->
        <Grid Grid.Row="7" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Netz Verlauf:" VerticalAlignment="Top" Margin="0,0,12,0" />
            <lvc:CartesianChart x:Name="NetChart" Grid.Column="1" />
        </Grid>

        <!-- Disk Chart Row -->
        <Grid Grid.Row="8" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Disk Verlauf:" VerticalAlignment="Top" Margin="0,0,12,0" />
            <lvc:CartesianChart x:Name="DiskChart" Grid.Column="1" />
        </Grid>
    </Grid>
</Window>
